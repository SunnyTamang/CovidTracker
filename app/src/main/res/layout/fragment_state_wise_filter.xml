<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:id="@+id/topbglayout"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:background="#212B46">


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/stateCardView"
        android:layout_width="match_parent"
        android:layout_height="180dp"

        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="4dp"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:text="Country Name"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"

                >

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:startIconDrawable="@drawable/location"
                    android:hint="Select Location"
                    android:id="@+id/select_location">

                    <AutoCompleteTextView
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:textColor="#000"/>



                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/stateCardView"
        android:layout_marginTop="15dp">




        <!-- Search Bar for state wise fiter -->
        <EditText
            android:id="@+id/search_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"


            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:text="Countries"
                android:textSize="14sp"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"

                android:letterSpacing="0.03"
                android:id="@+id/country_name"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirmed"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:id="@+id/total_affected"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:text="Active"
                android:textSize="12sp"
                android:gravity="center"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:id="@+id/total_recovered"/>

            <TextView
                android:id="@+id/new_affected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Recovered"
                android:textColor="#000"
                android:textSize="12sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:text="Deceased"
                android:textColor="#000"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:gravity="center"
                android:textSize="12sp"
                android:id="@+id/total_deaths"/>


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/linearLayout"
            android:scrollbars="none"

            />

    </LinearLayout>



</RelativeLayout>