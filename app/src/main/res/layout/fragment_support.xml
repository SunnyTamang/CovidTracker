<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SupportFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#335F81"
                android:paddingBottom="12dp">

                <!--            <ImageView-->
                <!--                android:id="@+id/imageView"-->
                <!--                android:layout_width="0dp"-->
                <!--                android:layout_height="0dp"-->

                <!--                android:scaleType="centerCrop"-->
                <!--                app:layout_constraintDimensionRatio="H,16:9"-->
                <!--                app:layout_constraintTop_toTopOf="parent"-->
                <!--                app:layout_constraintStart_toStartOf="parent"-->
                <!--                app:layout_constraintEnd_toEndOf="parent"/>-->

                <androidx.cardview.widget.CardView
                    android:id="@+id/view"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"

                    android:elevation="12dp"
                    app:cardBackgroundColor="#335F81"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView">

                    <ImageView
                        android:id="@+id/circleImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/corona_logo" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato"
                    android:text="Covid Symptoms"
                    app:layout_constraintBottom_toTopOf="@+id/desc"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toTopOf="@+id/view" />

                <TextView
                    android:id="@+id/desc"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/lato"
                    android:paddingTop="10dp"
                    android:text="There are number of covid symptoms.\n
which may vary from person to person"
                    android:textColor="#8A000000"
                    app:layout_constraintStart_toEndOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/name" />

                <Button
                    android:id="@+id/covidSymptomsBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="View all"
                    android:textAllCaps="false"
                    android:textColor="#8A000000"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desc" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandableView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="50dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desc">

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/phoneIcon"-->
                    <!--                    android:layout_width="30dp"-->
                    <!--                    android:layout_height="30dp"-->
                    <!--                    android:layout_marginTop="22dp"-->
                    <!--                    android:layout_marginStart="12dp"-->

                    <!--                    app:layout_constraintStart_toStartOf="parent"-->
                    <!--                    app:layout_constraintTop_toTopOf="parent"/>-->

                    <TextView
                        android:id="@+id/mCommonSymptoms"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="35dp"
                        android:paddingTop="70dp"
                        android:text="Most common symptoms"
                        android:textColor="#000"
                        app:layout_constraintBottom_toTopOf="@+id/mCSymp" />

                    <TextView
                        android:id="@+id/mCSymp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="50dp"
                        android:paddingTop="10dp"
                        android:text="\u2022 fever\n\u2022 dry cough\n\u2022 tiredness"
                        android:textColor="#8A000000"

                        app:layout_constraintTop_toBottomOf="@+id/mCommonSymptoms" />

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/mailIcon"-->
                    <!--                    android:layout_width="30dp"-->
                    <!--                    android:layout_height="30dp"-->
                    <!--                    android:layout_marginTop="22dp"-->
                    <!--                    android:layout_marginStart="12dp"-->

                    <!--                    app:layout_constraintStart_toStartOf="parent"-->
                    <!--                    app:layout_constraintTop_toBottomOf="@+id/phoneIcon"/>-->

                    <TextView
                        android:id="@+id/lCommonSymptoms"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="35dp"
                        android:paddingTop="15dp"
                        android:text="Less common symptoms"
                        android:textColor="#000"

                        app:layout_constraintTop_toBottomOf="@+id/mCSymp" />

                    <TextView
                        android:id="@+id/lCSymp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="50dp"
                        android:paddingTop="10dp"
                        android:text="\u2022 aches and pain\n\u2022 sore throat\n\u2022 diarrhoea\n\u2022 conjunctivitis\n\u2022 headache\n\u2022 loss of taste or smell\n\u2022 a rash on skin, or disolouration of fingers or toes"
                        android:textColor="#8A000000"

                        app:layout_constraintTop_toBottomOf="@+id/lCommonSymptoms" />

                    <TextView
                        android:id="@+id/seriousSymptoms"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="35dp"
                        android:paddingTop="15dp"
                        android:text="Serious symptoms"
                        android:textColor="#000"

                        app:layout_constraintTop_toBottomOf="@+id/lCSymp" />

                    <TextView
                        android:id="@+id/sSymp"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="50dp"
                        android:paddingTop="10dp"
                        android:text="\u2022 difficulty in breathing or shortness of breath\n\u2022 chest pain or pressure\n\u2022 loss of speech or movement"
                        android:textColor="#8A000000"
                        app:layout_constraintTop_toBottomOf="@+id/seriousSymptoms" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView1"
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="8dp"

            app:layout_constraintTop_toBottomOf="@id/cardView">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#335F81"
                android:paddingBottom="12dp">


                <androidx.cardview.widget.CardView
                    android:id="@+id/view1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"

                    android:elevation="12dp"
                    app:cardBackgroundColor="#335F81"
                    app:cardCornerRadius="25dp"
                    app:layout_constraintStart_toStartOf="parent">

                    <ImageView
                        android:id="@+id/circleImage1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/precautions" />

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/precautions"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/lato"
                    android:text="Precautions"
                    app:layout_constraintBottom_toTopOf="@+id/desc1"
                    app:layout_constraintStart_toEndOf="@+id/view1"
                    app:layout_constraintTop_toTopOf="@+id/view1" />

                <TextView
                    android:id="@+id/desc1"
                    style="@style/TextAppearance.AppCompat.Body1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:fontFamily="@font/lato"
                    android:paddingTop="10dp"
                    android:text="Stopping the spread starts with you"
                    android:textColor="#8A000000"
                    app:layout_constraintStart_toEndOf="@+id/view1"
                    app:layout_constraintTop_toBottomOf="@+id/precautions" />

                <Button
                    android:id="@+id/precautionsBtn"
                    style="@style/Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="12dp"
                    android:text="View all"
                    android:textAllCaps="false"
                    android:textColor="#8A000000"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desc1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/expandableView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:paddingBottom="50dp"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/desc1">

                    <!--                <ImageView-->
                    <!--                    android:id="@+id/phoneIcon"-->
                    <!--                    android:layout_width="30dp"-->
                    <!--                    android:layout_height="30dp"-->
                    <!--                    android:layout_marginTop="22dp"-->
                    <!--                    android:layout_marginStart="12dp"-->

                    <!--                    app:layout_constraintStart_toStartOf="parent"-->
                    <!--                    app:layout_constraintTop_toTopOf="parent"/>-->

                    <TextView
                        android:id="@+id/precautionPoints"
                        style="@style/TextAppearance.AppCompat.Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="35dp"
                        android:paddingTop="70dp"
                        android:text="To prevent the spread of COVID-19:"
                        android:textColor="#000"
                        app:layout_constraintBottom_toTopOf="@+id/prec" />

                    <TextView
                        android:id="@+id/prec"
                        style="@style/TextAppearance.AppCompat.Body1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/lato"
                        android:paddingLeft="50dp"
                        android:paddingTop="10dp"
                        android:text="\u2022 clean your hands often\n\t\t\u2023 use soap and water\n\t\t\u2023 use an alcohol-based hand rub\n\u2022 maintain a safe distance from everyone\n\u2022 wear a mask always when out or when physical\n
distancing is not possible\n\u2022 dont touch your eyes, nose or mouth\n\u2022 cover your nose or mouth while sneezing or use a\n
tissue\n\u2022 stay home if you feel unwell and isolate yourself from your family\n\u2022 if have fever, cough and difficulty breathing,\n
seek meical attention"
                        android:textColor="#8A000000"

                        app:layout_constraintTop_toBottomOf="@+id/precautionPoints" />


                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/gridConsLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/cardView1">


            <ImageView
                android:id="@+id/whoemblem"
                android:layout_width="68dp"
                android:layout_height="60dp"
                android:layout_marginStart="80dp"
                android:layout_marginTop="20dp"
                android:scaleType="centerCrop"
                android:src="@drawable/whoemblem"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView

                android:id="@+id/whotips"
                style="@style/TextAppearance.AppCompat.Title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/lato"

                android:text="WHO important links"


                app:layout_constraintBottom_toBottomOf="@+id/whoemblem"

                app:layout_constraintStart_toEndOf="@+id/whoemblem"
                app:layout_constraintTop_toTopOf="@+id/whoemblem"
                app:layout_constraintVertical_bias="0.125" />

            <GridLayout
                android:id="@+id/whoGridLinks"
                android:layout_width="match_parent"
                android:layout_height="374dp"
                android:columnCount="2"
                android:paddingTop="20dp"
                android:rowCount="2"
                app:layout_constraintTop_toBottomOf="@id/whoemblem"
                >

                <androidx.cardview.widget.CardView
                    android:id="@+id/mythCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="0"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#335F81"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mythbusters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Mythbusters"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/transmissionCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#335F81"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/transmission"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_horizontal"
                            android:text="Transmission"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/maskCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="0"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#335F81"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/masks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Masks"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/vaccinationCardView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_rowWeight="1"
                    android:layout_column="1"
                    android:layout_columnWeight="1"
                    android:layout_gravity="fill"
                    android:layout_margin="8dp"
                    app:cardBackgroundColor="#335F81"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical|center_horizontal"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vaccination"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Vaccination"
                            android:fontFamily="@font/lato"
                            android:textStyle="bold" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </GridLayout>
            <androidx.cardview.widget.CardView
                android:id="@+id/smallGatheringsCardView"
                style="@style/CardView.Light"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/whoGridLinks">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:background="#335F81"
                    android:paddingBottom="12dp">
                <TextView
                    android:id="@+id/smallGatherings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Small public gatherings and COVID-19"
                    android:fontFamily="@font/lato"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>




        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>