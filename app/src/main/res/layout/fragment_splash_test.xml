        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="102dp"
            android:layout_height="87dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_margin="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/logo" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="65dp"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:scaleType="fitStart"
            android:src="@drawable/logo" />


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="30dp"
        app:cardCornerRadius="12dp"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="4dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/confirmed_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Confirmed"
                            android:textColor="#6D767E"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/confirmed_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#ff6666"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/active_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Active"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/active_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#2086FE"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recovered_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Recovered"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/recovered_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#2DAA4A"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/deceased_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Deceased"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/deceased_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/search_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/cardView">
    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_margin="16dp"
        android:paddingStart="12dp"
        android:drawablePadding="12dp"
        android:textColor="@color/black"
        android:fontFamily="@font/lato"
        android:drawableStart="@drawable/ic_baseline_search_24"
        android:background="@drawable/custom_search"
        android:drawableTint="#6D767E"



        android:hint="Search Country"
        android:textColorHint="#6D767E"
        android:paddingLeft="12dp"
        />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_linear"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="5">


        <TextView
            android:id="@+id/country_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.85"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Countries"

            android:textColor="#000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/total_affected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Confirmed"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_recovered"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Active"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/new_affected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Recovered"
            android:textColor="#000"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/total_deaths"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.05"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:letterSpacing="0.03"
            android:text="Deceased"
            android:textColor="#000"
            android:textSize="12sp" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/world_list_rv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:scrollbars="none" />


</RelativeLayout>