<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StateWiseDataActivity">
<!--    android:background="#212B46"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="218dp"
        tools:ignore="MissingConstraints"
        android:background="#475B5A"

        >



    </LinearLayout>



    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:orientation="horizontal"
        android:weightSum="100"
        android:layout_marginTop="15dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:gravity="start|center"

            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/back_icon"
                android:id="@+id/backbutton"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:gravity="center|start"

            >
            <TextView
                android:id="@+id/countyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="normal"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:letterSpacing="0.01"
                android:text=""
                android:gravity="center"
                />
        </LinearLayout>



    </LinearLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/stateCardView"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="60dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        app:layout_constraintTop_toBottomOf="@+id/LinearLayout"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:padding="4dp"

            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/confirmed_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Confirmed"
                            android:textColor="#6D767E"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/confirmed_Count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#ff6666"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/active_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Active"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/active_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#2086FE"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/recovered_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Recovered"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/recovered_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_marginBottom="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#2DAA4A"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_weight="1"
                    android:elevation="3dp"
                    android:translationX="3dp"
                    android:translationY="3dp"
                    android:translationZ="3dp"
                    app:cardBackgroundColor="#f2f3f4"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="start"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/deceased_cases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="6dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/lato"
                            android:gravity="center"
                            android:text="Deceased"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/deceased_count"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="4dp"
                            android:layout_marginTop="4dp"
                            android:layout_marginRight="4dp"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:textColor="#6D767E"
                            android:textSize="14sp"
                            android:textStyle="normal" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:orientation="vertical"
        android:layout_below="@+id/stateCardView"
        >
        <EditText
            android:id="@+id/searchState"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_margin="16dp"
            android:paddingStart="12dp"
            android:drawablePadding="12dp"
            android:hint="Search state"
            android:background="@drawable/custom_search"
            android:textColor="@color/black"
            android:drawableStart="@drawable/ic_baseline_search_24"

            android:paddingLeft="12dp"
            />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edittext"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="5">


            <TextView
                android:id="@+id/state_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.85"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="State"

                android:textColor="#000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/total_affected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Confirmed"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_recovered"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Active"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/new_affected"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Recovered"
                android:textColor="#000"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/total_deaths"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.05"
                android:fontFamily="sans-serif-medium"
                android:gravity="center"
                android:letterSpacing="0.03"
                android:text="Deceased"
                android:textColor="#000"
                android:textSize="12sp" />


        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/state_list_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:padding="4dp"
            android:scrollbars="vertical" />



    </LinearLayout>






</RelativeLayout>